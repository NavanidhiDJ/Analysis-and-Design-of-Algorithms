#include <stdio.h>

void fractionalKnapsack(int n, int W, int weight[], int value[]) {
    float ratio[n], temp;
    int i, j;
    int used[n];
    float totalProfit = 0.0;

    for (i = 0; i < n; i++) {
        ratio[i] = (float)value[i] / weight[i];
        used[i] = 0;
    }

    for (i = 0; i < n; i++) {
        for (j = i + 1; j < n; j++) {
            if (ratio[i] < ratio[j]) {
                temp = ratio[i]; ratio[i] = ratio[j]; ratio[j] = temp;

                int t = value[i]; value[i] = value[j]; value[j] = t;
                t = weight[i]; weight[i] = weight[j]; weight[j] = t;
            }
        }
    }

    for (i = 0; i < n; i++) {
        if (weight[i] <= W) {
            W -= weight[i];
            totalProfit += value[i];
            used[i] = 1;
        } else {
            totalProfit += ratio[i] * W;
            used[i] = 2;
            break;
        }
    }

    printf("Total profit = %.2f\n", totalProfit);
    printf("Items used (1=full, 2=partial):\n");
    for (i = 0; i < n; i++) {
        printf("Item %d: %d\n", i + 1, used[i]);
    }
}

int main() {
    int value[] = {60, 100, 120};
    int weight[] = {10, 20, 30};
    int W = 50;
    int n = sizeof(value) / sizeof(value[0]);

    fractionalKnapsack(n, W, weight, value);

    return 0;
}
